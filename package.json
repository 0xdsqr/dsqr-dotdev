{
  "name": "dsqr-dotdev",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "all": "bun run clean && bun run build",
    "build": "bun run --filter='@dsqr-dotdev/db' build && bun run --filter='@dsqr-dotdev/auth' build && bun run --filter='@dsqr-dotdev/api' build && bun run --filter='dotdev' build",
    "clean": "rm -rf packages/*/dist packages/*/coverage apps/*/dist apps/*/.output",
    "dev:dotdev": "bun run --filter='dotdev' dev",
    "style:fix": "nix fmt .",
    "sync:check": "syncpack list-mismatches",
    "sync:fix": "syncpack fix-mismatches"
  },
  "workspaces": [
    "apps/dotdev",
    "packages/api",
    "packages/auth",
    "packages/db",
    "tooling/typescript"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "syncpack": "^13.0.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.0"
  },
  "private": true
}
